<div class="article__content" id="news-article">
    <div class="article-row" v-for="newsItems in newsOrdered">
        <template v-for="(item, index) in newsItems">
            <a :href="`/ru/news/${item.id}-${item.url}`" class="article" v-if="!Array.isArray(item)">
                <img :src="`/images/temp/news/${item.logo}`" :alt="item.logo"
                     :class="getClass()"
                     onload="newsArticle.loadImage(this)" style="opacity: 0"/>
                <div class="background"></div>
                <div class="tags">
                    <span
                        @click="showByTag(tag.title)"
                        class="badge badge-pill badge-danger"
                        :style="{background: `#${tag.color}`}"
                        v-html="`#${tag.title}`"
                        v-for="tag in item.tags">
                    </span>
                </div>
                <div class="title">
                    <span class="text" v-text="getTitle(item.title)">
                    </span>
                </div>
                <div class="ticket" v-if="types[item.type]" v-text="types[item.type]">
                </div>
            </a>
            <div class="article-col" v-if="Array.isArray(item)">
                <a :href="`/ru/news/${article.id}-${article.url}`" class="article" v-for="(article, index) in item">
                    <img :src="`/images/temp/news/${article.logo}`" :alt="article.logo"
                         :class="getClass()"
                         onload="newsArticle.loadImage(this)" style="opacity: 0"/>
                    <div class="background"></div>
                    <div class="title">
                        <span
                            class="badge badge-pill badge-danger"
                            :style="{background: `#${tag.color}`}"
                            v-html="`#${tag.title}`"
                            v-for="tag in item.tags">
                        </span>
                        <span class="text" v-text="getTitle(article.title)">
                        </span>
                    </div>
                    <div class="ticket" v-if="types[article.type]" v-text="types[article.type]">
                    </div>
                </a>
            </div>
        </template>
    </div>
    <div class="d-flex justify-content-center">
        <div class="loadingio-spinner-gear-mtphwgoy79e" v-show="load">
            <div class="ldio-rwuvarvnp1s">
                <div><div></div><div></div><div></div><div></div><div></div><div></div></div>
            </div>
        </div>
    </div>
</div>
