<div class="component slider_trainers" style="animation: bounce 0.5s ease-in-out; box-shadow: 0 0 0.4vw #000000;">
  <div class="top">
    <div class="prev">
      <a @click="toTrainerPage" class="pointer">
        <img src="/images/arrowLftWhite.svg" alt="arrowLftWhite" />
        Назад
      </a>
    </div>
    <div class="help"></div>
  </div>
  {#
  <div class="slidesContainer">
    <div class="slideLft" @click="sliderPrev" :style="{opacity: slideControll ? 1 : 0.2}" v-if="slideView > 0">
      <img src="/images/arrowLftWhite.svg" />
    </div>
    <div class="slideRgt" @click="sliderNext" :style="{opacity: slideControll ? 1 : 0.2}" v-if="slideView < slideCounts - 1">
      <img src="/images/arrowRgtWhite.svg" />
    </div>
