{% extends 'base.html.twig' %}
{% block router %}offer{% endblock %}
{% block title %}{{ title }}{% endblock %}
{% block router %}offer{% endblock %}
{% block description %}
    <meta name="description"
          content="{{ description }}">
{% endblock %}
{% block keywords %}
    <meta name="Keywords"
          content="{{ keywords }}">
{% endblock %}
{% block meta %}
    {% if meta_tags is not empty %}
        {% for meta in meta_tags %}
            <meta name="{{ meta.name }}"
                  content="{{ meta.value }}">
        {% endfor %}
    {% endif %}
{% endblock %}
{% block body %}
    {{ heading }}
    <div class="politica">
        <div class="container">
            {{setting.get('offerPolicy') is not null ? setting.get('offerPolicy').value|raw  : ''}}
        </div>
    </div>
{% endblock %}
