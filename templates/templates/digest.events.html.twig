{% extends 'base.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block router %}events{% endblock %}
{% block canonical %}
    <link rel=“canonical” href=“{{ link }}/ru/daydzhest_turnirov” />
{% endblock %}
{% block description %}
    <meta name="description"
          content="{{ description }}">
{% endblock %}
{% block keywords %}
    <meta name="Keywords"
          content="{{ keywords }}">
{% endblock %}
{% block meta %}
    {% if meta_tags is not empty %}
        {% for meta in meta_tags %}
            <meta name="{{ meta.name }}"
                  content="{{ meta.value }}">
        {% endfor %}
    {% endif %}
{% endblock %}
{% block body %}
    {% if heading_type == 1 %}
        <h1 style="opacity: 0; position: absolute; left: 0; top: 0">{{ heading }}</h1>
    {% else %}
        <h2 style="opacity: 0; position: absolute; left: 0; top: 0">{{ heading }}</h2>
    {% endif %}
    <div class="events page">
        <div class="ml-8 mr-8 p-0 d-flex">
            <div class="navigation d-flex align-items-center justify-content-between">
                <a href="{{ url('main') }}">
                    Главная
                </a>
                <i class="fas fa-arrow-right ml-2 mr-2" style="font-size: .7vw"></i>
                <span>
                    Дайджест турниры
                </span>
            </div>
        </div>
        <div class="ml-8 mr-8 p-0">
            <events-digest-page :events-games="{{ games|json_encode }}"/>
        </div>
    </div>
{% endblock %}