{% extends 'templates/mails/template.html.twig' %}
{% block css %}
    <style>
        label {
            position: relative;
            color: #C8C8C8;
        }

        label:before {
            content: "★";
            display: inline-block;
            font-size: 1.5em;
            color: #ccc;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        input:checked ~ label:before {
            color: #FF6D1D;
        }

        input:checked ~ {
            color: #FF6D1D;
        }

        label:hover ~ label:before {
            color: #ff8300;
        }

        label:hover:before {
            color: #FF6D1D;;
        }
        .stars{
            unicode-bidi: bidi-override;
            direction: rtl;
        }
        .stars input{
            display: none;
        }
    </style>
{% endblock %}

{% block body %}
