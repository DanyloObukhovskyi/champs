<div class="component ratings">
  <div class="header">
    <div class="round">
      <div><img src="/images/lamp.svg" alt="lamp" /></div>
    </div>
    <div class="title">
      Рейтинг игроков
    </div>
  </div>
  <div class="table">
    {% set i = 1 %}
    {% for item in ratingPlayers %}
    <div class="table-row">
      <div>
        <span class="num">{{i}}.</span>
        <img src="{{item.image}}" alt="Avatar" />
        <label>
          <span><img src="/images/temp/flag-russia.png" alt="Flag Russian" />{{item.nickname}}</span>
          <span class="name">{{item.fullname}}</span>
        </label>
      </div>
      <div>
        <img src="{{item.team.image}}" alt="Rectangle5" />
        {{item.team.title}}
      </div>
      <div>
        <span class="date">{{item.event.date|date('F d, h:s')}}</span>
        <span>{{item.event.title}}</span>
      </div>
    </div>
    {% set i = i + 1 %}
    {% endfor %}
  </div>
</div>
