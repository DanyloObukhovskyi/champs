{% extends 'base.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block router %}home{% endblock %}
{% block description %}
    <meta name="description"
          content="{{ description }}">
{% endblock %}
{% block keywords %}
    <meta name="Keywords"
          content="{{ keywords }}">
{% endblock %}
{% block meta %}
    {% if meta_tags is not empty %}
        {% for meta in meta_tags %}
        <meta name="{{ meta.name }}"
              content="{{ meta.value }}">
        {% endfor %}
    {% endif %}
{% endblock %}
{% block body %}
    <h1 style="opacity: 0; position: absolute; left: 0; top: 0">
        Главная
    </h1>
    <div class="home page">
        <home-page  popular-tags="{{ popularTags|json_encode }}"></home-page>
    </div>
{% endblock %}