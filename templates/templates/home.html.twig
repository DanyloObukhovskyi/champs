{% extends 'base.html.twig' %}
{% block title %}Champs.pro{% endblock %}
{% block router %}home{% endblock %}
{% block description %}
  <meta name="description" content="Тренеры по League of Legends, СS:GO, Dota, матчи, игровые новости, события и мероприятия в игровой индустрии">
{% endblock %}
{% block keywords %}
  <meta name="Keywords" content="League of Legends, СS:GO, Dota, Игровые матчи, Игровые новости, События, Рейтинг комманд, Рейтинг игроков, Игрок недели, Результаты матчей, Турниры">
{% endblock %}
{% block body %}
<h1 style="opacity: 0; position: absolute; left: 0; top: 0">
  Главная
</h1>
<div class="home">
  <div class="container">
    <div class="row">
      <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
        <div class="banner">
<!--          <img src="/images/banner2.svg" class="banner p" alt="banner" />
          <img src="/images/banner2.svg" class="banner m" alt="banner" />-->
<object class="banner" type="image/svg+xml" data="/images/banner2.svg">
  Your browser does not support SVG
</object>

        </div>
        {% include 'templates/home/matches.html.twig' %}
      </div>
      <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
        {% include 'templates/home/videos.html.twig' %}
      </div>
    </div>
    <div class="row">
      <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
        {% include 'templates/home/events.html.twig' %}
        {% include 'templates/home/tournaments.html.twig' %}
        <div class="banner bottom">
          <!--          <img src="/images/banner2.svg" class="banner p" alt="banner" />
          <img src="/images/banner2.svg" class="banner m" alt="banner" />-->
<object class="banner" type="image/svg+xml" data="/images/banner2.svg">
  Your browser does not support SVG
</object>
        </div>
      </div>
      <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
        <div class="row">
          <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12">
            {% include 'templates/home/updates.html.twig' %}
          </div>
          <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
            {% include 'templates/home/results.html.twig' %}
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
        {% include 'templates/home/ratings.player.html.twig' %}
      </div>
      <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
        <div class="row">
          <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12">
            {% include 'templates/home/ratings.teams.html.twig' %}
          </div>
          <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
            {% include 'templates/home/player.week.html.twig' %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
