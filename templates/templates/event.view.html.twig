{% extends 'base.html.twig' %}
{% block title %}
    {% if teams is not empty %}
            Команды
            {% for team in teams %}
                {{ team }}
            {% endfor %}
            на турнире {{ event.name }} по CS:GO
    {% else %}
        {{ event.name }}
    {% endif %}
{% endblock %}
{% block description %}
    <meta name="description"
          content="Команды
            {% for team in teams %}
                {{ team }}
            {% endfor %}
            на турнире {{ event.name }} по CS:GO история встреч и подробности">
{% endblock %}
{% block keywords %}
    <meta name="Keywords"
          content="{{ event.name }}">
{% endblock %}
{% block body %}
    <h1 style="opacity: 0; position: absolute; left: 0; top: 0">
        Команды
        {% for team in teams %}
            {{ team }}
        {% endfor %}
        на турнире {{ event.name }} по CS:GO история встреч и подробности
    </h1>
    <div class="event page">
        <div class="ml-8 mr-8 p-0 d-flex">
            <div class="navigation d-flex align-items-center justify-content-between">
                <a href="{{ url('main') }}">
                    Главная
                </a>
                <i class="fas fa-arrow-right ml-2 mr-2" style="font-size: .7vw"></i>
                <a href="{{ url('digest_events') }}">
                    Дайджест турниры
                </a>
                <i class="fas fa-arrow-right ml-2 mr-2" style="font-size: .7vw"></i>
                <span style="">
                    {{ event.name }}
                </span>
            </div>
        </div>
        <div class="ml-8 mr-8 p-0">
            <event-page :id="{{ event.id }}"/>
        </div>
    </div>
{% endblock %}