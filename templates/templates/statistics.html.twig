{% extends 'base.html.twig' %}
{% block title %}Статистика{% endblock %}
{% block router %}statistics{% endblock %}
{% block description %}
    <meta name="description" content="Статистика команд и игроков по League of Legends, Dota и Cs:Go">
{% endblock %}
{% block keywords %}
    <meta name="Keywords" content="Рейтинги игроков, Рейтинг команд, Top оружия, Рейтинг оружия, League of Legends, Dota, Cs:Go">
{% endblock %}
{% block body %}
    <h1 style="opacity: 0; position: absolute; left: 0; top: 0">
        Статистика
    </h1>
    <div class="statistics page">
        <div class="ml-8 mr-8 p-0">
            <div class="d-flex p-0 mt-4">
                <div class="w-50 mr-2">
                    <players-rating class-name="w-100"/>
                </div>
                <div class="w-50 ml-2">
                    <teams-rating/>
                </div>
            </div>
            <div class="d-flex justify-content-center align-items-center p-0 mt-3">
                <div class="w-50">
                    <weapon-doughnut/>
                </div>
                <div class="w-50">
                    <player-week/>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
