{% extends 'base.html.twig' %}
{% block title %}Новости{% endblock %}
{% block router %}news{% endblock %}
{% block description %}
    <meta name="description" content="Новости, статьи, матчи и трансферы по League of Legends, Dota, Cs:go">
{% endblock %}
{% block keywords %}
    <meta name="Keywords" content="Игровые матчи, Игровые новости, События, Видео, Интервью">
{% endblock %}
{% block css %}
    <link type="text/css" rel="stylesheet" href="/assets/styles/news-animation.css" />
{% endblock %}
{% block body %}
    <h1 style="opacity: 0; position: absolute; left: 0; top: 0">
        Новости
    </h1>
    <div class="news" id="app">
        <div class="ml-8 mr-8 p-0">
            <div class="navigation d-flex align-items-center justify-content-between" style="width: 11%;">
                <a style="" href="{{ url('main') }}">
                    Главная
                </a>
                <i class="fas fa-arrow-right" style="font-size: .7vw"></i>
                <span style="">
                    Новости
                </span>
            </div>
        </div>
        <div class="ml-8 mr-8 p-0">
            <news-page
                    popular-tags="{{ popularTags|json_encode }}"
                    tag="{{ tag }}">
            </news-page>
        </div>
    </div>
{% endblock %}